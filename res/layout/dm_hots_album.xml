        </RelativeLayout>
        <RelativeLayout android:id="@id/dm_hots_no_data" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ImageView android:id="@id/dm_no_data_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/hot_none" android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>