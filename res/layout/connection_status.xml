<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/conn_top"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:background="@drawable/zapya_common_connect_bg" >

        <Button
            android:id="@+id/conn_back"
            style="@style/banner_left"
            android:drawableTop="@drawable/button_cancel"
            android:text="@string/grpslt_cancel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grpslt_exist_group"
                android:textColor="@color/grpslt_title_text_color"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/conn_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/conn_top" />

</RelativeLayout>