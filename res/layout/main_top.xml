<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/main_top"
    android:layout_width="fill_parent"
    android:layout_height="80dip"
    android:background="@drawable/zapya_common_connect_bg"
    android:orientation="horizontal" >

    <Button
        android:id="@id/left"
        style="@style/banner_left"
        android:drawableTop="@drawable/button_cancel"
        android:text="@string/main_quick_click" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true" >

            <TextView
                android:id="@+id/connect_friends"
                android:layout_width="200dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:background="@drawable/zapya_common_connect_addfriends_bg"
                android:gravity="center"
                android:text="@string/main_conn_friends"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/connected_users"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:visibility="gone"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/conn_user1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:src="@drawable/avatar1" />

                <ImageView
                    android:id="@+id/conn_user2"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:src="@drawable/avatar1" />

                <ImageView
                    android:id="@+id/conn_user3"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:src="@drawable/avatar1" />

                <ImageView
                    android:id="@+id/conn_user4"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:src="@drawable/avatar1" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@id/right"
        style="@style/banner_right"
        android:drawableTop="@drawable/zapya_common_connect_invite"
        android:text="@string/userrpl_prompt_dlg_title" />

</LinearLayout>