    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dm_history_traffic_text_left" android:layout_centerVertical="true">
        <LinearLayout android:orientation="vertical" android:layout_width="@dimen/dm_history_traffic_text_width" android:layout_height="wrap_content">
