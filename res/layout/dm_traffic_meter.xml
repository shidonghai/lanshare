            <TextView android:id="@id/dm_traffic_mobile" android:paddingTop="@dimen/dm_history_traffic_text_vgap" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/dm_traffic_total_mobile" style="@style/history_traffic_text" />
