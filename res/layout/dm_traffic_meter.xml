            <TextView android:id="@id/dm_traffic_recv" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/dm_traffic_total_rx" style="@style/history_traffic_text" />
            <TextView android:id="@id/dm_traffic_save" android:paddingTop="@dimen/dm_history_traffic_text_vgap" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/dm_traffic_total_save" style="@style/history_traffic_text" />
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dm_history_traffic_hspliter_left" android:src="@drawable/zapya_history_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
</RelativeLayout>