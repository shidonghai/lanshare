            <TextView android:textSize="@dimen/dm_traffic_view_text_size" android:textColor="@color/dm_traffic_text_color" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dm_traffic_view_2nd_text_top" android:text="@string/dm_traffic_txrx_stat" />
