            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dm_traffic_view_3rd_image_left" android:layout_marginTop="@dimen/dm_traffic_view_4th_text_top" android:layout_marginRight="@dimen/dm_traffic_view_3rd_image_left">
                <ImageView android:layout_gravity="center_vertical" android:background="@drawable/zapya_history_flow_green" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <TextView android:textSize="@dimen/dm_traffic_view_text_size" android:textColor="@color/dm_traffic_text_color" android:gravity="left" android:id="@id/dm_traffic_view_tx_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dm_traffic_view_image_text_gap" android:text="@string/dm_traffic_tx_stat" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dm_traffic_view_3rd_image_left" android:layout_marginTop="@dimen/dm_traffic_view_5th_text_top" android:layout_marginRight="@dimen/dm_traffic_view_3rd_image_left">
                <ImageView android:layout_gravity="center_vertical" android:background="@drawable/zapya_history_flow_yellow" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <TextView android:textSize="@dimen/dm_traffic_view_text_size" android:textColor="@color/dm_traffic_text_color" android:gravity="left" android:id="@id/dm_traffic_view_rx_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dm_traffic_view_image_text_gap" android:text="@string/dm_traffic_rx_stat" />
            </LinearLayout>
            <TextView android:textSize="@dimen/dm_traffic_view_text_size" android:textColor="@color/dm_traffic_text_color" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dm_traffic_view_6th_text_top" android:text="@string/dm_traffic_stat" />
            <LinearLayout android:orientation="horizontal" android:id="@id/dm_traffic_view_mhw_image" android:layout_width="fill_parent" android:layout_height="@dimen/dm_traffic_view_image_height" android:layout_marginLeft="@dimen/dm_traffic_view_3rd_image_left" android:layout_marginTop="@dimen/dm_traffic_view_7th_image_top" android:layout_marginRight="@dimen/dm_traffic_view_3rd_image_left">
