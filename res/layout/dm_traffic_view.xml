                <ImageView android:id="@id/dm_traffic_image_tx" android:background="@drawable/zapya_history_flow_green" android:layout_width="wrap_content" android:layout_height="fill_parent" />
                <ImageView android:id="@id/dm_traffic_image_rx" android:background="@drawable/zapya_history_flow_yellow" android:layout_width="fill_parent" android:layout_height="fill_parent" />
