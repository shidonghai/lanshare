                <ImageView android:id="@id/dm_traffic_image_hotspot" android:background="@drawable/zapya_history_flow_grassgreen" android:layout_width="wrap_content" android:layout_height="fill_parent" />
                <ImageView android:id="@id/dm_traffic_image_wifi" android:background="@drawable/zapya_history_flow_blue" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dm_traffic_view_3rd_image_left" android:layout_marginTop="@dimen/dm_traffic_view_8th_text_top" android:layout_marginRight="@dimen/dm_traffic_view_3rd_image_left">
                <ImageView android:layout_gravity="center_vertical" android:background="@drawable/zapya_history_flow_red" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <TextView android:textSize="@dimen/dm_traffic_view_text_size" android:textColor="@color/dm_traffic_text_color" android:gravity="left" android:id="@id/dm_traffic_view_mobile_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dm_traffic_view_image_text_gap" android:text="@string/dm_traffic_mobile_stat" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dm_traffic_view_3rd_image_left" android:layout_marginTop="@dimen/dm_traffic_view_9th_text_top" android:layout_marginRight="@dimen/dm_traffic_view_3rd_image_left">
                <ImageView android:layout_gravity="center_vertical" android:background="@drawable/zapya_history_flow_grassgreen" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <TextView android:textSize="@dimen/dm_traffic_view_text_size" android:textColor="@color/dm_traffic_text_color" android:gravity="left" android:id="@id/dm_traffic_view_hotspot_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dm_traffic_view_image_text_gap" android:text="@string/dm_traffic_hotspot_stat" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dm_traffic_view_3rd_image_left" android:layout_marginTop="@dimen/dm_traffic_view_10th_text_top" android:layout_marginRight="@dimen/dm_traffic_view_3rd_image_left">
                <ImageView android:layout_gravity="center_vertical" android:background="@drawable/zapya_history_flow_blue" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <TextView android:textSize="@dimen/dm_traffic_view_text_size" android:textColor="@color/dm_traffic_text_color" android:gravity="left" android:id="@id/dm_traffic_view_wifi_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dm_traffic_view_image_text_gap" android:text="@string/dm_traffic_wifi_stat" />
            </LinearLayout>
            <TextView android:textSize="@dimen/dm_traffic_view_text_size" android:textColor="@color/dm_traffic_text_color" android:gravity="left" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dm_traffic_view_11th_text_left" android:layout_marginTop="@dimen/dm_traffic_view_11th_text_top" android:layout_marginRight="@dimen/dm_traffic_view_11th_text_left" android:text="@string/dm_traffic_notice" android:lineSpacingMultiplier="1.3" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>